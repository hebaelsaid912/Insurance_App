<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@color/white"
    android:padding="20dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome, "
                    android:textColor="@color/purple_500"
                    android:textSize="30dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/profileWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Ali"
                    android:textColor="@color/purple_500"
                    android:textSize="30dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/purple_500"
                    android:layout_weight="3"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Name"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:padding="5dp"
                        />
                </RelativeLayout>
                <TextView
                    android:id="@+id/ProfileName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Name "
                    android:background="@drawable/line"
                    android:textSize="20dp"
                    android:textColor="@color/purple_500"
                    android:layout_weight="5"
                    android:padding="5dp"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/purple_500"
                    android:layout_weight="3"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="CPR"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:padding="5dp"
                        />
                </RelativeLayout>
                <TextView
                    android:id="@+id/ProfileCPR"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Name "
                    android:textSize="20dp"
                    android:textColor="@color/purple_500"
                    android:layout_weight="5"
                    android:padding="5dp"
                    android:background="@drawable/line"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/purple_500"
                    android:layout_weight="3"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Date of birth"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:padding="5dp"
                        />
                </RelativeLayout>
                <TextView
                    android:id="@+id/ProfileBirthDate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Name "
                    android:textSize="20dp"
                    android:textColor="@color/purple_500"
                    android:layout_weight="5"
                    android:padding="5dp"
                    android:background="@drawable/line"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/purple_500"
                    android:layout_weight="3"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Gender"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:padding="5dp"
                        />
                </RelativeLayout>
                <TextView
                    android:id="@+id/ProfileGender"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Name "
                    android:background="@drawable/line"
                    android:textSize="20dp"
                    android:textColor="@color/purple_500"
                    android:layout_weight="5"
                    android:padding="5dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/purple_500"
                    android:layout_weight="3"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Flat"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:padding="5dp"
                        />
                </RelativeLayout>
                <TextView
                    android:id="@+id/ProfileFlat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Name "
                    android:background="@drawable/line"
                    android:textSize="20dp"
                    android:textColor="@color/purple_500"
                    android:layout_weight="5"
                    android:padding="5dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/purple_500"
                    android:layout_weight="3"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Building"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:padding="5dp"
                        />
                </RelativeLayout>
                <TextView
                    android:id="@+id/ProfileBuilding"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Name "
                    android:background="@drawable/line"
                    android:textSize="20dp"
                    android:textColor="@color/purple_500"
                    android:layout_weight="5"
                    android:padding="5dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/purple_500"
                    android:layout_weight="3"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Road"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:padding="5dp"
                        />
                </RelativeLayout>
                <TextView
                    android:id="@+id/ProfileRoad"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Name "
                    android:background="@drawable/line"
                    android:textSize="20dp"
                    android:textColor="@color/purple_500"
                    android:layout_weight="5"
                    android:padding="5dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/purple_500"
                    android:layout_weight="3"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="City"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:padding="5dp"
                        />
                </RelativeLayout>
                <TextView
                    android:id="@+id/ProfileCity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Name "
                    android:background="@drawable/line"
                    android:textSize="20dp"
                    android:textColor="@color/purple_500"
                    android:layout_weight="5"
                    android:padding="5dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/purple_500"
                    android:layout_weight="3"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Mobile"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:padding="5dp"
                        />
                </RelativeLayout>
                <TextView
                    android:id="@+id/ProfileMobile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Name "
                    android:background="@drawable/line"
                    android:textSize="20dp"
                    android:textColor="@color/purple_500"
                    android:layout_weight="5"
                    android:padding="5dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/purple_500"
                    android:layout_weight="3"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Phone"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:padding="5dp"
                        />
                </RelativeLayout>
                <TextView
                    android:id="@+id/ProfilePhone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Name "
                    android:background="@drawable/line"
                    android:textSize="20dp"
                    android:textColor="@color/purple_500"
                    android:layout_weight="5"
                    android:padding="5dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/purple_500"
                    android:layout_weight="3"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Email"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:padding="5dp"
                        />
                </RelativeLayout>
                <TextView
                    android:id="@+id/ProfileEmail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Name "
                    android:background="@drawable/line"
                    android:textSize="20dp"
                    android:textColor="@color/purple_500"
                    android:layout_weight="5"
                    android:padding="5dp"
                    />

            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Log out"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:onClick="Go_LogOut"
                />
        </LinearLayout>


    </ScrollView>

</LinearLayout>