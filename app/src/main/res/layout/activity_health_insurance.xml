<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:text="Choose Insurance Options"
                android:textColor="@color/purple_500"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Company:"
                android:textColor="@color/purple_500"
                android:textSize="20dp" />
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                >
                <RadioButton
                    android:id="@+id/AhliaInsurance_Health"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Al Ahlia Insurance"
                    android:textColor="@color/purple_500"
                    android:padding="10dp"

                    />
                <RadioButton
                    android:id="@+id/AXAInsurance_Health"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AXA Insurance"
                    android:textColor="@color/purple_500"
                    android:padding="10dp"
                    />
                <RadioButton
                    android:id="@+id/TakafulInsurance_Health"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Takaful Insurance"
                    android:textColor="@color/purple_500"
                    android:padding="10dp"
                    />
                <RadioButton
                    android:id="@+id/GulfInsurance_Health"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gulf Union Insurance"
                    android:textColor="@color/purple_500"
                    android:padding="10dp"
                    />
            </RadioGroup>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Insurance Policy Type:"
                android:textColor="@color/purple_500"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/Spinner_PolicyType_HealthInsurance"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:textSize="25sp"
                android:textColor="#082453"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:padding="5dp"
                android:background="@drawable/shapeicon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Insurance Package Type:"
                android:textColor="@color/purple_500"
                android:textSize="20dp" />
                <Spinner
                    android:id="@+id/Spinner_PackageType_HealthInsurance"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:textSize="25sp"
                    android:layout_weight="10"
                    android:textColor="#082453"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:pointerIcon="horizontal_double_arrow"
                    android:spinnerMode="dropdown"
                    android:padding="5dp"
                    android:background="@drawable/shapeicon"
                    />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Insured Name:"
                android:textColor="@color/purple_500"
                android:textSize="20dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/purple_500"
                >
                <EditText
                    android:id="@+id/InsuredName_HealthInsurance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shapeicon"
                    android:inputType="text"
                    android:textColor="#082453"
                    android:textSize="20sp"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Insured CPR:"
                android:textColor="@color/purple_500"
                android:textSize="20dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/InsuredCPR_HealthInsurance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shapeicon"
                    android:inputType="text"
                    android:textColor="#082453"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Dental Care:"
                android:textColor="@color/purple_500"
                android:textSize="20dp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp">
                    <RadioButton
                        android:id="@+id/DentelHealthYes_Insurance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:textColor="#082453"
                        android:textSize="20dp"
                        android:layout_marginRight="40dp"
                        />
                    <RadioButton
                        android:id="@+id/DentelHealthNo_Insurance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textColor="#082453"
                        android:textSize="20dp"
                        />
                </RadioGroup>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Maternity Coverage:"
                android:textColor="@color/purple_500"
                android:textSize="20dp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp">
                <RadioButton
                    android:id="@+id/MaternityHealthYes_Insurance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:textColor="#082453"
                    android:textSize="20dp"
                    android:layout_marginRight="40dp"
                    />
                <RadioButton
                    android:id="@+id/MaternityHealthNo_Insurance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textColor="#082453"
                    android:textSize="20dp"
                    />
            </RadioGroup>
            <Button
                android:id="@+id/GetHealthQuotationInsurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Quotation"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
